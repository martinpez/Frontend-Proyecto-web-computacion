---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const app = await getCollection('apps');
export const prerender = true;
---

<Layout>
	  <main class="p-20">
		<h1 class="text-center text-7xl font-extrabold">Dev ğŸ§‘ğŸ»â€ğŸ’»
