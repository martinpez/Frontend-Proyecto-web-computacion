	  </main>
</Layout>


<section aria-label="Aplicaciones Moviles">
		<div class="px-6 mx-auto max-w-screen-xl">	
			<div class="grid gap-10 md:grid-cols-2">
				{
					app.map(app => {
						const { slug, data } = app
						const { title, developer, img , repo ,description ,languages  } = data;
						return (
